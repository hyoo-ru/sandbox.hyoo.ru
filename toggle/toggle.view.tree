$hyoo_sandbox_toggle $mol_view
	sub /
		<= Left $mol_view 
			event *
				click?event <=> left_click?event null
			sub /
				<= left $mol_view
		<= toggle $mol_check
			checked?val <=> is_check?val false
		<= Right $mol_view 
			event *
				click?event <=> right_click?event null
			sub /
				<= right $mol_view
